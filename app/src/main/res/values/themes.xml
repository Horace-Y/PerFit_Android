<resources>
    <!-- Base application theme. -->
    <style name="Theme.PerFit" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mainBlue</item>
        <item name="colorPrimaryVariant">@color/skyBlue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/statusBarColor</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="FitnessResultActivityStyle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/mainBlue</item>
        <item name="colorPrimaryDark">@color/darkerBlue</item>
        <item name="colorAccent">@color/skyBlue</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="android:statusBarColor">@color/statusBarColor</item>
    </style>

    <style name="FitnessActionSelectionActivityStyle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/mainBlue</item>
        <item name="colorPrimaryDark">@color/darkerBlue</item>
        <item name="colorAccent">@color/skyBlue</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="android:statusBarColor">@color/statusBarColor</item>
    </style>

    <style name="CustomBottomNavigationViewStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="backgroundTint">@color/bottomNavBackground</item>
        <item name="itemIconTint">@color/bottom_nav_view_item_color</item>
        <item name="itemTextColor">@color/bottom_nav_view_item_color</item>
    </style>
</resources>